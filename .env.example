# ETF GraphRAG Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# Neo4j Configuration
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123
NEO4J_DATABASE=neo4j

# Neo4j Memory Settings (adjust based on your system)
NEO4J_HEAP_INITIAL=512m
NEO4J_HEAP_MAX=2G
NEO4J_PAGECACHE=1G

# =============================================================================
# Ollama Configuration  
# =============================================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:instruct
OLLAMA_TEMPERATURE=0.2
OLLAMA_MAX_TOKENS=500
OLLAMA_KEEP_ALIVE=24h

# Alternative model options:
# OLLAMA_MODEL=llama3.1:8b-instruct-q4_0
# OLLAMA_MODEL=codellama:7b-instruct

# =============================================================================
# ETL Configuration
# =============================================================================
ALLOWED_TICKERS=SPY,QQQ,IWM,IJH,IVE,IVW
CACHE_TTL_DAYS=30
CACHE_DIR=/tmp/etf_cache
FORCE_REFRESH=false

# Data source URLs (updated periodically by providers)
SPY_URL=https://www.ssga.com/library-content/products/fund-data/etfs/us/holdings-daily-us-en-spy.xlsx
QQQ_URL=https://www.invesco.com/us/financial-products/etfs/holdings/main/holdings/0?action=download&audienceType=Investor&ticker=QQQ
IWM_URL=https://www.ishares.com/us/products/239710/ishares-russell-2000-etf/1467271812596.ajax?fileType=csv&fileName=IWM_holdings&dataType=fund
IJH_URL=https://www.ishares.com/us/products/239763/ishares-core-sp-midcap-etf/1467271812596.ajax?fileType=csv&fileName=IJH_holdings&dataType=fund
IVE_URL=https://www.ishares.com/us/products/239728/ishares-sp-500-value-etf/1467271812596.ajax?fileType=csv&fileName=IVE_holdings&dataType=fund
IVW_URL=https://www.ishares.com/us/products/239725/ishares-sp-500-growth-etf/1467271812596.ajax?fileType=csv&fileName=IVW_holdings&dataType=fund

# =============================================================================
# API Configuration
# =============================================================================
LOG_LEVEL=INFO
MAX_QUERY_LENGTH=512
MAX_CYPHER_LIMIT=50
RESPONSE_CACHE_TTL=3600

# Security settings
MAX_QUERY_TIMEOUT=30
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# =============================================================================
# UI Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_GRAPH_DEFAULT_LAYOUT=cose-bilkent
VITE_MAX_GRAPH_NODES=100
VITE_ENABLE_ANALYTICS=false

# =============================================================================
# Docker Configuration
# =============================================================================

# Profile selection (choose one):
# COMPOSE_PROFILES=cpu        # For CPU-only Ollama
# COMPOSE_PROFILES=gpu        # For GPU-accelerated Ollama  
# COMPOSE_PROFILES=init       # For system initialization
COMPOSE_PROFILES=cpu

# Container resource limits
API_MEMORY_LIMIT=1g
UI_MEMORY_LIMIT=512m
NEO4J_MEMORY_LIMIT=3g
OLLAMA_MEMORY_LIMIT=4g

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development features
DEV_MODE=false
DEBUG_LOGGING=false
ENABLE_CORS=true
HOT_RELOAD=true

# Mock data (for development without ETL)
USE_MOCK_DATA=false
MOCK_DATA_SIZE=small

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================

# Metrics collection
ENABLE_METRICS=false
METRICS_PORT=9090

# Distributed tracing
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Health check intervals (seconds)
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Backup & Recovery (Optional)
# =============================================================================

# Automated backups
ENABLE_BACKUPS=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=/backups

# =============================================================================
# Custom Extensions (Optional)
# =============================================================================

# Additional ETF tickers (comma-separated)
CUSTOM_TICKERS=

# Custom data sources
CUSTOM_DATA_SOURCES=

# Plugin configurations
ENABLE_CUSTOM_PLUGINS=false
PLUGIN_DIRECTORY=/plugins